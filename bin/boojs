#!/usr/bin/env ruby
require 'boojs'
require 'optparse'
require 'phantomjs'

#Parse
##########################################
parser = OptionParser.new do |opts|
  opts.banner = "Usage: boojs [-v file]"

  opts.on "-v FILE" do |f|
    @file = f
  end
end
parser.parse!
##########################################

#Run verify or run stdin/stdout mode?
if @file
  BooJS.verify File.read(@file)
end
